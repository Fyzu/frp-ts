{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "lib",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "noEmit": true
  },
  "include": ["src", "perf"],
  "exclude": ["dist", "node_modules"]
}
